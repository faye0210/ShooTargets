<h2 class="head_title">Deatil of Target</h2>
<div class="box">
    <div class="box-show">
        <p>
            <% @target.labels.each do |l| %>
                <%= l.name %>
            <% end %>
        </p>
        <p class="target_title">
            <strong>Title:</strong>
            <%= @target.title %>
        </p>
        <p class="target_detail">
            <strong>Detail:</strong>
            <%= @target.detail %>
        </p>
        <p class="target_deadline">
            <strong>Deadline:</strong>
            <%= @target.deadline.strftime("%Y-%m-%d %H:%M") %>
        </p>
        <div class="achieve">
            <% if @target.status == true %>
            <p class="achieve_message">達成してるよ!</p>
            <% else %>
            <%= button_to "達成！", achieve_target_path(@target), method: :POST, data: { confirm: "達成済みにしますか？一度押すと戻せないよ！" }, class: "btn btn-danger"%>
            <% end %>
        </div>
        <br>
        <% if @target.status == false %>
        <%= link_to 'Edit', edit_target_path(@target) %>
        <% end %>
        <br>
        <%= link_to 'HOME', targets_path %>
    </div>
</div>
